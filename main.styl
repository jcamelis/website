body, h1,h2,h3,h4,h5,h5
	font-family: 'Open Sans', sans-serif;

body 
	// padding-top: 166px;
	text-align: center;
	color: #4d4d4d;

h1,h2,h3,h4,h5,h5
	font-weight: bold
	color: black;

header.site-header
	background: #2f2f2f;
	border-top: 2px solid yellow;
	text-align: center;
	padding: 20px 0;
	// position: fixed;
	// top: 0;
	// left: 0
	// right: 0;
	z-index: 1000;
	a 
		color: white;
		text-transform: uppercase
	nav.nav-left, nav.nav-right
		display: inline-block

	nav.nav-left a
		margin-left: 40px;

	nav.nav-right a
		margin-left: 40px;

	h1.logo 
		display: inline-block;
		margin: 0 40px;
		a 
			width: 200px;

			display: inline-block
			img 
				width: 100%;
section.splash
	background: #000;
	padding: 200px 0;
	text-align: center;
	position: relative;

	img 
		width: auto
		max-width: 100%;
		height: auto;

	a.skip-to-content
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		background: #333;
		padding: 20px;


section.about
	position: relative; 
	text-align: left;
	.about-left, .about-right
		width: 50%;
		display: inline-block

	.about-left 
		padding: 100px 140px;
		text-align: center

	.about-right
		background: #333 url('img/logo.png') center no-repeat;
		background-size: 30%;
		position: absolute;
		right: 0;
		top: 0;
		bottom: 0;

section.faq 
	.question 
		max-width: 500px;
		margin: 50px auto;


section.profiles
	padding-top: 50px;
	.profiles-users 
		margin-top: 30px;
		background: #333;
		padding: 50px;


section.contact 
	text-align: left;
	background-color: #333;
	color: white;
	h3 
		color: white;
