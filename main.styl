body, h1,h2,h3,h4,h5,h5
	font-family: 'Open Sans', sans-serif;

body 
	// padding-top: 166px;
	text-align: center;
	color: #4d4d4d;

h1,h2,h3,h4,h5,h5
	font-weight: bold
	color: black;

header.site-header
	background: #2f2f2f;
	border-top: 2px solid yellow;
	text-align: center;
	padding: 20px 0;
	// position: fixed;
	// top: 0;
	// left: 0
	// right: 0;
	z-index: 1000;
	a 
		color: white;
		text-transform: uppercase
	nav.nav-left, nav.nav-right
		display: inline-block

	nav.nav-left a
		margin-left: 50px;

	nav.nav-right a
		margin-right: 50px;

	h1.logo 
		display: inline-block;
		margin: 0 50px;
		a 
			width: 200px;

			display: inline-block
			img 
				width: 100%;
section.splash
	background: #000;
	padding: 200px 0;
	text-align: center;
	position: relative;
	background: #333 url('img/placeholder.jpg');
	background-size: cover;
	img 
		width: auto
		max-width: 100%;
		height: auto;

	a.skip-to-content
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		background: #333;
		padding: 20px;


section.about
	position: relative; 
	text-align: left;
	border-bottom: 2px solid #2f2f2f;

	.about-left, .about-right
		width: 50%;
		display: inline-block

	.about-left 
		padding: 100px 140px;
		text-align: center
		p 
			margin: 20px 0;

	.about-right
		background: #2f2f2f url('img/logo.png') center no-repeat;
		background-size: 50%;
		position: absolute;
		right: 0;
		top: 0;
		bottom: 0;

section.faq 
	.question 
		max-width: 500px;
		margin: 50px auto;


section.profiles
	padding-top: 50px;
	.profiles-users 
		margin-top: 30px;
		background: #333;
		padding: 100px 0 40px 0;


	.hexagon
		overflow: hidden;
		visibility: hidden;
		-webkit-transform: rotate(120deg);
		-moz-transform: rotate(120deg);
		-o-transform: rotate(120deg);
		transform: rotate(120deg);
		cursor: pointer;
		display: inline-block


	.hexagon2 {
		width: 150px;
		height: 300px;
		margin: -80px 0 0 8px;
	}


	.hexagon-in1 {
		overflow: hidden;
		width: 100%;
		height: 100%;
		-webkit-transform: rotate(-60deg);
		-moz-transform: rotate(-60deg);
		-o-transform: rotate(-60deg);
		transform: rotate(-60deg);
	}

	.hexagon-in2 
		width: 100%;
		height: 100%;
		background-repeat: no-repeat;
		background-position: 50%;
		background-size: cover;
		background-image: url(https://si0.twimg.com/profile_images/2583335118/yts2np89ifncbi0j3vgm.jpeg);
		visibility: visible;
		-webkit-transform: rotate(-60deg);
		-moz-transform: rotate(-60deg);
		-o-transform: rotate(-60deg);
		transform: rotate(-60deg);
	
	.second-line, .third-line
		margin-top: -90px;

section.contact 
	text-align: left;
	background: #333 ;
	background-size: cover;
	color: white;
	address
		font-size: 20px;
		font-weight: bold;
		margin-top: 40px;
	h3 
		color: white;
section
	padding: 40px 0;

footer.site-footer
	background: #222;
	padding: 20px;