/* Vars
-------------------------------------------------- */
$bg_grey = #2f2f2f;

.carousel-fade {
	.item {
		opacity: 0;
		-webkit-transition: 0.6s ease-in-out top;
		-moz-transition-property: opacity;
		-o-transition-property: opacity;
		transition-property: opacity;
		z-index: 8;
	}

	.active {
		opacity: 1;
	}

	.active.left,
	.active.right {
		left: 0;
		opacity: 0;
		z-index: 1;
	}

	.next.left,
	.prev.right {
		opacity: 1;
	}

  .carousel-control {
  		z-index: 2;
  }
}


